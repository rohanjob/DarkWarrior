<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DARKSITE</title>
    <meta name="description" content="Darksite - Fictional Cybersecurity Platform for DevOps Study" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <!-- Animated Background -->
    <div class="bg-animated"></div>
    <div id="particles-bg"></div>

    <!-- Header -->
    <header>
        <nav>
            <a href="/" class="logo">DARKSITE</a>
            <ul class="nav-links">
                <li><a href="/">Home</a></li>
                <li><a href="/Bounty/Board">Bounty Board</a></li>
                <li><a href="/Home/About">About</a></li>
                <li><a href="#" id="loginLink" class="btn-danger">Hunter Login</a></li>
            </ul>
        </nav>
    </header>

    <!-- Main Content -->
    <main>
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="text-center py-5" style="background: rgba(18, 18, 26, 0.8); border-top: 2px solid var(--accent-primary); margin-top: 5rem;">
        <div class="container">
            <p class="mono text-muted">
                &copy; 2077 DARKSITE - Fictional Platform for Study Purpose Only
            </p>
            <p class="text-primary" style="font-size: 0.9rem; margin-top: 1rem;">
                Built with ASP.NET Core | Entity Framework | Azure SQL | Azure DevOps
            </p>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/js/api-client.js" asp-append-version="true"></script>
    <script src="~/js/scroll-effects.js" asp-append-version="true"></script>
    <script src="~/js/spider.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
